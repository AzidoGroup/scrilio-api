{
	"env": {
		"browser": false,
		"es6": true,
		"jquery": false,
		"mocha": true,
		"mongo": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 6
	},
	"rules": {
		"brace-style": [
			"error",
			"1tbs"
		],
		"camelcase": [
			"error",
			{
				"properties": "always"
			}
		],
		"comma-dangle": [
			"error",
			"never"
		],

		"comma-spacing": [
			"error",
			{
				"before": false,
				"after": true
			}
		],

		"comma-style": [
			"error",
			"last"
		],

		"curly": [
			"error",
			"all"
		],

		"dot-notation": [
			"warn",
			{
				"allowKeywords": true,
				"allowPattern": "^[a-z]+(_[a-z]+)+$"
			}
		],

		"eqeqeq": [
			"error",
			"always"
		],

		"func-call-spacing": [
			"error",
			"never"
		],

		"id-length": [
			"warn",
			{
				"exceptions": ["e", "i", "j", "_", "$"]
			}
		],

		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],

		"key-spacing": [
			"error",
			{
				"beforeColon": false,
				"afterColon": true,
				"mode": "strict"
			}
		],

		"linebreak-style": [
			"error",
			"unix"
		],

		"new-cap": [
			"error",
			{
				"capIsNew": false
			}
		],

		"no-alert": "error",

		"no-bitwise": "error",

		"no-caller": "error",

		"no-const-assign": "error",

		"no-dupe-args": "error",

		"no-dupe-keys": "error",

		"no-duplicate-case": "error",

		"no-else-return": "error",

		"no-empty-pattern": "error",

		"no-mixed-spaces-and-tabs": [
			"error",
			"smart-tabs"
		],

		"no-multi-spaces": "error",

		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1
			}
		],

		"no-self-assign": [
			"error",
			{
				"props": true
			}
		],

		"no-var": "error",

		"no-undef": "error",

		"no-undef-init": "error",

		"no-unreachable": "error",

		"no-useless-return": "error",

		"no-unused-vars": [
			"error",
			{
				"args": "after-used",
				"caughtErrors": "all",
				"vars": "all"
			}
		],

		"no-void": "error",

		"object-shorthand": "error",

		"one-var": [
			"error",
			"never"
		],

		"prefer-const": "off",

		"prefer-promise-reject-errors": "error",

		"prefer-template": "error",

		"quote-props": [
			"error",
			"as-needed"
		],

		"quotes": [
			"warn",
			"single"
		],

		"semi": [
			"error",
			"always"
		],

		"spaced-comment": [
			"error",
			"always"
		],

		"space-infix-ops": [
			"error"
		],

		"space-before-blocks": "error",

		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "ignore"
			}
		],

		"strict": [
			"error",
			"global"
		],

		"wrap-iife": [
			"error",
			"inside"
		],

		"valid-jsdoc": [
			"error",
			{
				"requireParamDescription": true,
				"requireReturnDescription": true,
				"requireReturn": false,
				"requireReturnType": true,
				"prefer": {
					"return": "return"
				}
			}
		]
	},

	"settings": {}
}
